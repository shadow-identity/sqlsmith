	},
	"dependencies": {
		"@sqlsmith/core": "workspace:*",
		"commander": "^14.0.0"
	},
	"devDependencies": {
		"@types/node": "^24.0.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.3"
