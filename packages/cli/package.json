{
	"name": "@sqlsmith/cli",
	"version": "0.4.1",
	"description": "CLI for SQLsmith - SQL schema merging with dependency resolution",
	"main": "./dist/cli.js",
	"types": "./dist/cli.d.ts",
	"type": "module",
	"bin": {
		"sqlsmith": "./dist/cli.js"
	},
	"files": [
